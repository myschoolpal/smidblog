<section class = 'col-md-offset-3 col-md-6 show-section'>
  <h2 class="text-center" style="font-family: sans-serif; color:#888888; font-size:36px; margin:20px; margin-bottom:10px; letter-spacing:-2px;">Sign Up</h2>
  <div class = 'row'>
    <div class = 'col-sm-12'>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>
        <div class="col-sm-offset-2 col-sm-2">
          <%= f.label :forename %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :forename %>
        </div>
        <div class="col-sm-offset-2 col-sm-2">
          <%= f.label :surname %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :surname %>
        </div>
        <div class="col-sm-offset-2 col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, autofocus: true %>
        </div>
        <div class="col-sm-offset-2 col-sm-2">
          <%= f.label :password %>  
        </div>
        <div class = "col-sm-8">
          <%= f.password_field :password, autocomplete: "off" %>
        </div>
        <div class="col-sm-offset-2 col-sm-2">
          <%= f.label :confirm_password %>
        </div>
        <div class= "col-sm-8">
          <%= f.password_field :confirm_password, autocomplete: "off" %>
        </div>
        <div class="col-sm-offset-5 col-sm-7">
          <%= f.submit "Sign up", class: "btn btn-small btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</section>
