<section class="show-section">
	<div class = "row">
		<div class = "col-md-offset-1 col-md-10">
			<div class = "col-sm-12">
				<%= form_for @article do |f| %>
					<div class = "form-group input-lg">
						<div class = "control-label col-sm-offset-1 col-sm-2">
							<%= f.label :title %>
						</div>
						<div class = "col-sm-8">
							<%= f.text_field :title, class: "form-control input-lg" %>
						</div>
					</div>
					<div class = "form-group">
						<div class = "control-label col-sm-offset-1 col-sm-2">
							<%= f.label :content %>
						</div>
						<div class = "col-sm-8">
							<%= f.text_area :content, rows:10, class: "form-control", id: "content" %>
						</div>
					</div>
					<div class = "form-group">
						<div class = "col-sm-offset-1 col-sm-2">
							<%= f.label :image %>
						</div>
						<div class = "col-sm-2">
							<% signer = Aws::S3::Presigner.new %>
							<% image_url = signer.presigned_url(:get_object, bucket: "smidblog-images", key: @article.image) %>
							<%= image_tag image_url, style:"width:100%;" %>	
						</div>
						<div class = "col-sm-7">
							<%= f.file_field :image %>
						</div>
					</div>
					<div class = "form-group">
						<div class = "col-sm-offset-5 col-sm-7">
							<%= f.submit "Update Article", class: "btn btn-xs btn-primary" %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</section>
<script type="text/javascript">
	$('#content').wysihtml5();
</script>